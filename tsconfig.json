{
  // 繁體中文: TypeScript 設定檔，支援 ESM 與 ts-node
  "compilerOptions": {
    // 輸出設定
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    
    // 模組解析
    "moduleResolution": "node",
    "verbatimModuleSyntax": false,
    
    // 輸出檔案
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    // 型別檢查
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    
    // ESNext 功能
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  
  // ts-node ESM 支援設定
  "ts-node": {
    "esm": true,
    "experimentalEsm": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "ESNext"
    }
  },
  
  "include": ["src/**/*", "server.ts"],
  "exclude": ["node_modules", "dist"]
}
